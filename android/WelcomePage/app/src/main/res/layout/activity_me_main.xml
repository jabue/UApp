<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.evtechnology.welcomepageapp.MeMainActivity"
    android:id="@+id/RegisterPage">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="76dp"
        android:id="@+id/uapp_logo"
        android:layout_marginTop="22dp"
        android:src="@drawable/uapplogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="SignUp"
        android:id="@+id/btn_signup"
        android:layout_below="@+id/uapp_logo"
        android:background="@drawable/customerboder2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:textColor="#2c83a8" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Login"
        android:background="@drawable/customerboder"
        android:id="@+id/btn_login"
        android:layout_below="@+id/uapp_logo"
        android:layout_toRightOf="@+id/btn_signup"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_signup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPwd"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPwd2"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:layout_below="@+id/editTextPwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Re-enter Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Submit"
        android:id="@+id/register_email_btn"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editTextPwd2"
        android:layout_alignLeft="@+id/editTextPwd2"
        android:layout_alignStart="@+id/editTextPwd2"
        android:layout_alignRight="@+id/editTextPwd2"
        android:layout_alignEnd="@+id/editTextPwd2"
        android:background="@drawable/customerboder3"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="OR"
        android:id="@+id/textView2"
        android:layout_below="@+id/register_email_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_facebook"
        android:layout_alignParentBottom="true"
        android:src="@drawable/facebook"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_gplus"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/image_facebook"
        android:layout_alignEnd="@+id/image_facebook"
        android:src="@drawable/googleplus"/>


</RelativeLayout>
